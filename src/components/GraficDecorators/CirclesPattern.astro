<svg width="800" height="800" xmlns="http://www.w3.org/2000/svg" class="cicles-pattern" viewBox="0 0 400 400">
  <defs>
    <!-- Motivo de círculos concéntricos completos -->
    <g id="full-circles">
      <circle cx="20" cy="20" r="20" fill="#f5f2ea" stroke="#179aff" stroke-width="1"/>
      <circle cx="20" cy="20" r="15" fill="#f5f2ea" stroke="#179aff" stroke-width="1"/>
      <circle cx="20" cy="20" r="10" fill="#f5f2ea" stroke="#179aff" stroke-width="1"/>
      <circle cx="20" cy="20" r="5" fill="#f5f2ea" stroke="#179aff" stroke-width="1"/>
      <circle cx="20" cy="20" r="1" fill="#f5f2ea" stroke="#179aff" stroke-width="1"/>
    </g>
  </defs>

  <!-- Dibuja filas superpuestas de círculos completos -->
  <g>
    <!-- Fila 1 -->
    <g>
      <use href="#full-circles" x="0" y="0"/>
      <use href="#full-circles" x="40" y="0"/>
      <use href="#full-circles" x="80" y="0"/>
      <use href="#full-circles" x="120" y="0"/>
    </g>
    
    <!-- Fila 2 (desplazada) -->
    <g>
      <use href="#full-circles" x="20" y="25"/>
      <use href="#full-circles" x="60" y="25"/>
      <use href="#full-circles" x="100" y="25"/>
    </g>

    <!-- Fila 3 (nueva fila aún más abajo) -->
    <g>
      <use href="#full-circles" x="0" y="50"/>
      <use href="#full-circles" x="40" y="50"/>
      <use href="#full-circles" x="80" y="50"/>
    </g>

     <!-- Fila 3 (nueva fila aún más abajo) -->
    <g>
      <use href="#full-circles" x="20" y="75"/>
      <use href="#full-circles" x="60" y="75"/>
    </g>

     <!-- Fila 4 (nueva fila aún más abajo) -->
    <g>
      <use href="#full-circles" x="40" y="95"/>
    </g>
  </g>
</svg>
